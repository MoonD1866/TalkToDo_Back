{
  "title": "Ctrl+Arrow to Cmd+[ or ]",
  "rules": [
    {
      "description": "Map Ctrl+Left/Right Arrow to Cmd+[ or Cmd+]",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_arrow",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "open_bracket",
              "modifiers": ["command"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_arrow",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "close_bracket",
              "modifiers": ["command"]
            }
          ]
        }
      ]
    }
  ]
}
